@model Emina.Models.Answer

@{
    ViewBag.Title = "Question";
}

<h1>@Model.Enquete.Name</h1>

@using (Html.BeginForm()) {
    <table>
        <thead>
            <tr>
                <td>
                    Question @ViewBag.Question.QuestionNumber out of @Model.Enquete.Questions.Count
                </td>
                <td>

                </td>
            </tr>
            <tr>
                <td>
                    @ViewBag.Question.Text
                </td>
                <td>

                </td>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    @Html.RadioButtonFor(a => Model.TextAnswer, "True")
                </td>
                <td>
                    Eens
                </td>
            </tr>
            <tr>
                <td>
                    @Html.RadioButtonFor(a => Model.TextAnswer, "False")
                </td>
                <td>
                    Oneens
                </td>
            </tr>
            <tr>
                <td>
                    @Html.HiddenFor(model => model.EnqueteID)
                    @Html.HiddenFor(model => model.QuestionID)
                    @Html.HiddenFor(model => model.UserID)
                    <input type="submit" value="Next" />
                </td>
                <td>

                </td>
            </tr>
        </tbody>
    </table>
}