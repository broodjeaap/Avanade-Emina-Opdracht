@model Emina.Models.Answer

@{
    ViewBag.Title = "Question";
}

<h1>@Model.Enquete.Name</h1>

@using (Html.BeginForm()) {
    <table>
        <thead>
            <tr>
                <td>
                    Question @ViewBag.Question.QuestionNumber out of @Model.Enquete.Questions.Count
                </td>
                <td>

                </td>
            </tr>
            <tr>
                <td>
                    @ViewBag.Question.Text
                </td>
                <td>

                </td>
            </tr>
        </thead>
        <tbody>
        @foreach (var pa in ViewBag.Question.PossibleAnswers)
        {
            <tr>
                <td>
                    @if(pa.PossibleAnswerID == Model.PossibleAnswerID){
                        <input type ="radio" name="PossibleAnswerID" value="@pa.PossibleAnswerID" checked="checked"/>
                    } else {
                        <input type ="radio" name="PossibleAnswerID" value="@pa.PossibleAnswerID" />   
                    }
                </td>
                <td>
                    @pa.Text
                </td>
            </tr>
        }
            <tr>
                <td>
                    @Html.HiddenFor(model => model.EnqueteID)
                    @Html.HiddenFor(model => model.QuestionID)
                    @Html.HiddenFor(model => model.UserID)
                    <input type="submit" value="Next" />
                </td>
                <td>

                </td>
            </tr>
        </tbody>
    </table>
}